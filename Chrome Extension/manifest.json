{
  "name": "DontReadit Ad Blocker",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Blocks All Reddit Ads",
  "homepage_url": "http://extralargebacon.pizza",
  "permissions": ["tabs", "*://*.reddit.com/*"],
  "browser_action": 
  {
      "default_title": "DontReadit Ad Blocker"
  },
  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "run_at": "document_start",
      "js": [
        "jquery.js", 
        "content.js"]
    }
  ]
}